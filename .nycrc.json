{
  "extends": "@istanbuljs/nyc-config-typescript",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts", 
    "test/**/*",
    "out/**/*",
    "node_modules/**/*"
  ],
  "reporter": [
    "text",
    "text-summary", 
    "html",
    "lcov"
  ],
  "report-dir": "coverage",
  "check-coverage": true,
  "lines": 85,
  "functions": 85,
  "branches": 80,
  "statements": 85,
  "all": true,
  "cache": false
}
